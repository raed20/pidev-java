<AnchorPane>

</AnchorPane>
   <top>
      <TableView fx:id="tableView" prefHeight="378.0" prefWidth="572.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="Loan ref" />
