<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.CalculatorApp">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <TextField fx:id="loanAmountInput" promptText="Loan Amount" />
    <TextField fx:id="interestRateInput" promptText="Interest Rate" />
    <TextField fx:id="loanTenureInput" promptText="Loan Tenure" />

    <Button text="Calculate" onAction="#calculateEMI" />

    <Label fx:id="loanEMIValue" />
    <Label fx:id="totalInterestValue" />
    <Label fx:id="totalAmountValue" />

    <PieChart fx:id="pieChart" />

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
</VBox>
