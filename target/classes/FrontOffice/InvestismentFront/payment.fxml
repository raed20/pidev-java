<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.PaymentController"
      spacing="10"
      alignment="CENTER">

    <TextField fx:id="productNameField" promptText="Product Name"/>
    <TextField fx:id="amountField" promptText="Amount"/>
    <TextField fx:id="successUrlField" promptText="Success URL"/>
    <TextField fx:id="cancelUrlField" promptText="Cancel URL"/>

    <Button text="Create Payment Session" onAction="#createPaymentSession"/>
    <Text fx:id="resultText"/>

</VBox>